---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <div class="container mx-auto px-6 space-y-8">

    <!-- Title -->
    <h1 class="text-4xl font-semibold text-center tracking-tight mb-8">
      Atemfrequenz
    </h1>


    <!-- Instructions -->
    <div class="text-center text-gray-600 hidden sm:block">

      <p class="mb-2">
        Drücke die	 <span class="font-medium text-black ">LEERTASTE</span> mit dem ersten Atemzug um zu starten.	
      </p>

	  <p>Drücke <span class="font-medium text-black">ESC</span> zum Zurücksetzen.</p>
    </div>

    <!-- Counters -->
    <div class="mt-10 flex flex-col items-center gap-2 sm:gap-6">

	<!-- Timer Count Card -->
      <div id="timerCard" class="rounded-xl bg-white hidden sm:block shadow p-6 w-full max-w-md">
        <div class="text-center">
          <p class="text-sm text-gray-500">Gemessene Zeit</p>
          <p id="timerValue" class="text-4xl font-bold mt-1">0</p>
        </div>
      </div>

      <!-- Breath Count Card -->
      <div id="breathCard" class="rounded-xl bg-white  shadow p-6 w-full max-w-md">
        <div class="text-center">
          <p class="text-sm text-gray-500">Gezählte Atemzüge</p>
          <p id="breathCount" class="text-4xl font-bold mt-1">0</p>
        </div>
      </div>

      <!-- BPM Card -->
      <div id="bpmCard" class="rounded-xl bg-white  shadow p-6 w-full max-w-md invisible">
        <div class="text-center">
          <p class="text-sm text-gray-500">Atemfrequenz</p>
          <p id="bpm" class="text-4xl font-bold mt-1">0</p>
          <p class="text-gray-500 text-sm mt-1">Atemzüge / Minute</p>
        </div>
      </div>
    </div>

    <div class="mt-6 flex flex-col items-center">
      <button   class="rounded-full size-36 text-2xl font-semibold tracking-wide text-gray-700 bg-white shadow-xl hidden
         animate-pulse 
         active:scale-105 active:animate-none
         transition-all duration-150" id="tapButton">Start</button>
    </div>

    <div class="mt-6 flex flex-col items-end max-w-md mx-auto">
      <a href="/info" class="text-sm text-gray-600 hover:underline">Info & Anleitung</a>
    </div>

  </div>

  <script src="../scripts/breath.ts"></script>
</Layout>
